+        if not isinstance(prefixes, list) or len(prefixes) == 0:
+            raise Exception(ERR_CONFIG_API_INVALID_SETTINGS)
+
+        normalized_prefixes = []
+        for prefix in prefixes:
+            if not isinstance(prefix, str):
+                raise Exception(ERR_CONFIG_API_INVALID_SETTINGS)
+
+            normalized_prefix = prefix.strip()
+            if not normalized_prefix:
+                raise Exception(ERR_CONFIG_API_INVALID_SETTINGS)
+
+            normalized_prefixes.append(normalized_prefix)
+
+        max_value_bytes = config.get('configApiMaxValueBytes', CONFIG_API_DEFAULT_MAX_VALUE_BYTES)
+        if isinstance(max_value_bytes, bool) or not isinstance(max_value_bytes, int) or max_value_bytes <= 0:
+            raise Exception(ERR_CONFIG_API_INVALID_SETTINGS)
+
+        return enabled, normalized_prefixes, max_value_bytes
